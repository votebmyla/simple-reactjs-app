pipeline {
  agent any
  environment {
    DOCKERHUB_CREDENTIALS=credentials('dockerhub')
  }
  stages {
    stage('clone project'){
      steps{
        echo 'cloning project ...'
        git branch: 'staging', credentialsId: 'github', poll: false, url: 'https://github.com/votebmyla/simple-reactjs-app.git'
        }
      
    }
    stage("test stage"){
      steps{
        echo 'testing the application...'
      }
    }
    stage("deploy stage"){
      steps{
        echo 'deploying the application...'
        sh "ls -la"
      }
    }
  }
}